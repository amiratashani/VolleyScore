<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_view_home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/image_view_home"
        app:layout_constraintStart_toStartOf="@+id/image_view_home"
        app:layout_constraintTop_toBottomOf="@+id/image_view_home"
        tools:text="Barecelona" />

    <TextView
        android:id="@+id/text_view_away_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/image_view_away"
        app:layout_constraintStart_toStartOf="@+id/image_view_away"
        app:layout_constraintTop_toBottomOf="@+id/image_view_away"
        tools:text="Esteghlal" />

    <TextView
        android:id="@+id/text_view_away_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="#000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_away"
        app:layout_constraintEnd_toStartOf="@+id/image_view_away"
        app:layout_constraintTop_toTopOf="@+id/image_view_away"
        tools:text="5" />

    <TextView
        android:id="@+id/text_view_home_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="#000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_home"
        app:layout_constraintStart_toEndOf="@+id/image_view_home"
        app:layout_constraintTop_toTopOf="@+id/image_view_home"
        tools:text="3" />

    <ImageView
        android:id="@+id/image_view_home"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image_view_away"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>